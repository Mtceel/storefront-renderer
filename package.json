{
  "name": "storefront-renderer",
  "version": "1.0.0",
  "description": "Stateless multi-tenant storefront renderer with Liquid template engine",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "echo No build needed",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t storefront-renderer:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env storefront-renderer:latest"
  },
  "keywords": ["ecommerce", "storefront", "liquid", "multi-tenant", "saas"],
  "author": "Platform Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.470.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-jaeger": "^1.18.1",
    "@opentelemetry/sdk-node": "^0.45.1",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "liquidjs": "^10.9.4",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-http": "^8.6.1",
    "prom-client": "^15.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
